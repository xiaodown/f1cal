[Unit]
Description=F1 Dashboard Flask Server
After=network.target
Wants=network.target

[Service]
Type=simple
User=xiaodown
Group=xiaodown
WorkingDirectory=/home/xiaodown/code/f1cal
ExecStart=/home/xiaodown/code/f1cal/.venv/bin/python /home/xiaodown/code/f1cal/main.py
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target